@using Markdig
@code {
  [Parameter] public string Markdown { get; set; } = string.Empty;
  
  private string Preview => 
    string.IsNullOrWhiteSpace(Markdown) 
      ? string.Empty 
      : Markdig.Markdown.ToHtml(this.Markdown, new Markdig.MarkdownPipelineBuilder().UseAdvancedExtensions().Build())
  ;
}

<div class="markdown">
  @((MarkupString)this.Preview)
</div>