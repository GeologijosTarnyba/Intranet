@rendermode InteractiveServer
@code {
  [EditorRequired]
  [Parameter] public RenderFragment ChildContent { get; set; } = default!;
  [Parameter] public EventCallback onclick { get; set; }
  [Parameter] public bool ParamIsActive { get; set; } = true;
}
@if (ParamIsActive)
{
  <button type="button" @onclick=@this.onclick @onclick:preventDefault>
    @ChildContent
  </button>
}
else
{
  @ChildContent
}
