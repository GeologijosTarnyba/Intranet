@using LGT.Intranet.Components.Shared.Inputs

@inherits Create2<Kreipinys, LGT.Intranet.Internal.InternalContext>
@code {
  #region Constructors
  public CreateKreipinys()
  {
    this.ParamInit = (prev) => new()
    {
      Since = System.DateTime.Now
    };
  }
  #endregion
}
@if (this.model != null)
{
  <CreateFormatTable Model=@this.model OnValidSubmit=@this.DoCreate>
    <InputAptarnaujantiImone @bind-id=@model.AptarnaujantiImoneID />
    <InputIncidentas @bind-id=@model.IncidentasID ParamIsOptional=true ParamIsPrefered=true />
    <InputDateTime ParamName="Užregistruotas" @bind-value=@model.Since />
    <InputString ParamName="Kreipinio pavadinimas" @bind-value=@this.model.UName />
    <InputString ParamName="Nuoroda" @bind-value=@this.model.Link ParamIsOptional="true" />
    <InputMarkdown ParamName="Kreipinio tekstas" @bind-value=@model.RequestText />
    <InputDateTime ParamName="Išspręstas" @bind-value=@model.Until ParamIsOptional=true />
    <InputMarkdown ParamName="Sprendimas" @bind-value=@model.SolutionText ParamIsOptional="true" />
  </CreateFormatTable>
}
