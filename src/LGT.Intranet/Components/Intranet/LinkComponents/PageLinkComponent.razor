@if (this.Href != null)
{
  <LinkComponent
    ParamHref=@this.Href
    ParamName=@this.ParamName
    ParamLinkType=@this.ParamLinkType
  />

}
@code {
  [Parameter] public int? ParamID { get; set; }
  [Parameter] public string? ParamName { get; set; }
  [Parameter] public string? ParamKey { get; set; }
  [Parameter] public LinkTypes ParamLinkType { get; set; }

  private string? Href
  {
    get {
      if(this.ParamKey != null)
        return $"/p/{this.ParamKey}";
      if (this.ParamID != null)
        return $"/p/{this.ParamID}";
      return null;
    }
  }
}
