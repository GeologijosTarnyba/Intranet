@inherits LayoutComponentBase
@inject NavigationManager NavManager
<PageTitle>Intranet</PageTitle>
@inject Data.IntranetContext db
<div class="main small">
  <div class="content px-4">
    @Body
		
	</div>
</div>
<div class="footer px-4 small">
  <hr/>
	<div class="row">
		<div class="col"></div>
		<div class="col">
			@if (NavManager.Uri == NavManager.BaseUri)
			{
				<ExpList
					ParamSource=@(db.Pages
						.Where(item => item.IsImportant)
						.AsNoTracking()
						.Select(item => new {
							item.ID,
							item.Key,
							item.Nam
						})
					)
				>
  				<IfSome Context=item>
						<PageLinkComponent ParamID=@item.ID ParamKey=@item.Key ParamName=@item.Nam />
						<br/>
					</IfSome>
				</ExpList>

			}
			else
			{
				<a href="/">Intranet</a>
			}
		</div>
		@*<div class="col">
			<a href="/in">Administravimas</a>
		</div>*@
		<div class="col">
			© <a href="https://www.lgt.lt/">Lietuvos geologijos tarnyba</a>
		</div>
	</div>
</div>