@inherits Create<Core.Intranet.Link>
@inject Data.IntranetContext db
@if (this.EditContext != null && this.model != null)
{
  <div class="border">
    <EditForm EditContext="@this.EditContext">
      <DataAnnotationsValidator />
      <div class="form-group">
        <label for="isPublic">Paskelbtas</label>
        <InputCheckbox @bind-Value=@this.model.IsPublic />
        <ValidationMessage For=@(() => this.model.IsPublic) />
      </div>
      <div class="form-group">
        <label for="index">Index</label>
        <InputNumber @bind-Value=@this.model.Index />
        <ValidationMessage For=@(() => model.Index) />
      </div>
      <div class="form-group">
        <label for="name">Pavadinimas </label>
        <InputText Id="name" class="form-control" @bind-Value="@model.Name" ></InputText>
        <ValidationMessage For="@(() => model.Name)" />
      </div>
      <div class="form-group">

        <label for="name"><a href=@this.model.Url target="_blank">Nuoroda</a> </label>
        <InputText Id="name" class="form-control" @bind-Value="@model.Url" ></InputText>
        <ValidationMessage For="@(() => model.Url)" />
      </div>
      <div class="form-group">
        <label for="name">Aprašymas </label>
        <InputText placeholder="nebūtinas" Id="name" class="form-control" @bind-Value="@model.Comment" ></InputText>
        <ValidationMessage For="@(() => model.Comment)" />
      </div>
      <div class="form-group">
        <label for="suSpyna">Su spyna</label>
        <InputCheckbox @bind-Value=@this.model.IsLocked />
        <ValidationMessage For=@(() => this.model.IsLocked) />
      </div>
      <div class="form-group">
        <label for="suSpyna">Atsidaro naujame lange</label>
        <InputCheckbox @bind-Value=@this.model.IsTargetBlank />
        <ValidationMessage For=@(() => this.model.IsTargetBlank) />
      </div>
      <p>
        <button type="submit">Patikrinti</button>
        <CreateButton Model=@EditContext.Model callbackOnCreate=this.OnCreate/>
      </p>
    </EditForm>
  </div>
}