@inherits AuthorizeView
@typeparam TEnum

@code {
  [Parameter] public TEnum Val { get; set; }

  private string PolicyName => Val switch {
    IntranetEnum intranetEnum => IntranetPolicy.GeneratePolicyNameFor(intranetEnum),
    AdminRightsEnum authEnum => AuthPolicy.GeneratePolicyNameFor(authEnum),
    GISEnum gisEnum => GISPolicy.GeneratePolicyNameFor(gisEnum),
    _ => string.Empty
  };
}
<AuthorizeView Policy=@PolicyName>

  <Authorized>
    @if (this.Authorized != null)
    {
      @this.Authorized(context)
    }
  </Authorized>
  <NotAuthorized>
    @if(this.NotAuthorized != null){
      @this.NotAuthorized(context)
    }
  </NotAuthorized>
  <Authorizing>
    @if(this.Authorizing!=null){
      @this.Authorizing
    }
  </Authorizing>
  
  
</AuthorizeView>